<%= form_tag() do %>
  <fieldset>
    <div class="field">
      <%= label_tag :passphrase %>
      <%= password_field_tag :passphrase %>
    </div>

    <%= hidden_field_tag :type, 'customer' %>

    <%= hidden_field_tag :id, @user.id %>

    <div class="actions">
      <%= submit_tag %>
    </div>
  </fieldset>
<% end %>
<p id="notice"><%= notice %></p>
<% if notice %>
  <div class="alert alert-info mid-text"><p id='notice'><%= notice %></p></div>
<% end %>

<div class="container-fluid text-center">
  <h2>SERVICES</h2>
  <br>
  <div class="row">
    <%= link_to(user_path) do %>
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-user logo-small"></span>
        <h4>PROFILE</h4>
        <p>View and edit your profile</p>
      </div>
      <% end %>
    <%= link_to(new_order_path) do %>
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-road logo-small"></span>
        <h4>ORDER</h4>
        <p>Order Go-Ride or Go-Car</p>
      </div>
    <% end %>
    <%= link_to(topup_path) do %>
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-credit-card logo-small"></span>
        <h4>GO-PAY</h4>
        <p>Top-up your Go-Pay balance</p>
      </div>
    <% end %>
  </div>
  <br><br>
  <div class="row">
    <%= link_to(orders_path) do %>
      <div class="col-sm-4">
        <span class="glyphicon glyphicon-lock logo-small"></span>
        <h4>HISTORY</h4>
        <p>View your order history</p>
      </div>
    <% end %>
  </div>
</div>

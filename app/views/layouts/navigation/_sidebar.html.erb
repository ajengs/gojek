<div class="main-sidebar">
  <div class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
      </div>

      <div class="pull-left info">
        <p>
          <%= link_to "#{@current_user.full_name}", user_path %>
        </p>
        <p><span class="glyphicon glyphicon-credit-card"></span> <%= @current_user.gopay %></p>
      </div>
    </div>

    <ul class="sidebar-menu">
      <li class="header">
        HEADER
      </li>
      <li class="active">
        <%= link_to "Order", new_order_path %>
      </li>
      <li>
        <%= link_to "Go-Pay", gopay_register_path %>
      </li>
      <li><%= link_to "Order History", orders_path %></li>
    </ul>
  </div>
</div>